.titleview{
  width: 100%;
  height: 5%;
  text-align: center;
  font-size: 15px;
  font-family: serif;
  font-weight: bold;
}
.bodyview{
  width: 100%;
  height: 500px;
  background: gainsboro;
}
.item{
  border-radius: 5px;
  height: 60px;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.item image{
  margin-left: 10px;
  width: 45px;
  height: 45px;
  background: white;
  border-radius: 45px;
}
.item .content{
  margin-left: 20px;
  font-size: 15px;
}

.line{
  margin-top: 1px;
  height: 1px;
  width: 100%;
  background: white;
}

.inputview{
  height: 7%;
  background: gainsboro;
  position: fixed;
  width: 100%;
  bottom: 0px;
  margin: 0px,auto;
  display: flex;
  align-items: center;
  border: 2px black;
}
.inputview .inputtext{
  width: 100%;
  background: white;
  border: solid 1px white;
  border-radius: 5px;
}