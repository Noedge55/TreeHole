.swiperitem{
  text-align: center;
}

.titleview{
  width: 100%;
  height: 5%;
  text-align: center;
  font-size: 15px;
  font-family: serif;
  font-weight: bold;
}
.bodyview{
  width: 100%;
  height: 350px;
  background: white;
}

.item{
  border-radius: 5px;
  height: 60px;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.item image{
  margin-left: 10px;
  width: 45px;
  height: 45px;
  background: white;
  border-radius: 45px;
}
.item .content{
  margin-left: 20px;
  font-size: 15px;
}
.replyview{
  display: flex;
  flex-direction: row-reverse;
}
.replyview .replyimg{
  width:20px;
  height: 20px;
}
.replyview .replynum{
  margin-right: 10px;
  margin-left: 2px;
  color: #8a8a8a;
  font-size: 15px;
}
.rtview{
  background: #DCDCDC;
  padding-left: 10px;
  width: 80%;
  border-radius: 3px;
  margin: 0 auto;
}

.rtview .rtextn{
  font-size: 13px;
  font-weight: bold;
}
.rtview .rtextc{
  font-size: 13px;
}

.line{
  margin-top: 2px;
  height: 2px;
  width: 100%;
  background: gainsboro;
}

.inputview{
  height: 10%;
  background: white;
  position: fixed;
  bottom:0px;
  width: 100%;
  border: 2px black;
}
.inputform{
  width: 100%;
  height: 100%;
}
.inputview .inputtext{
  margin-left: 5px;
  padding-left: 10px;
  margin-top: 8px;
  width: 80%;
  height: 70%;
  background: gainsboro;
  border-radius: 2px;
  font-size: 15px;
  float: left;
}
.inputview .send{
  position: absolute;
  padding: 0px;
  top:5px;
  right: 0px;
  font-weight: bold;
  font-size: 17px;
  margin-right: 15px;
  border: none;
  background: none;
}