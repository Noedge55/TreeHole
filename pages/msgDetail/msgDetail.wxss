/* pages/msgDetail/msgDetail.wxss */

.item{
  border-radius: 5px;
  height: 60px;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.item image{
  margin-left: 10px;
  width: 45px;
  height: 45px;
  background: white;
  border-radius: 45px;
}
.item .content{
  margin-left: 20px;
  font-size: 15px;
}
.replyview{
  margin-top: 70px;
  display: flex;
  flex-direction: row-reverse;
}
.replyview .replyimg{
  width:20px;
  height: 20px;
}
.replyview .replynum{
  margin-right: 10px;
  margin-left: 2px;
  color: #8a8a8a;
  font-size: 15px;
}


.line{
  margin-top: 2px;
  height: 2px;
  width: 100%;
  background: gainsboro;
}

.rtview{
  background: #DCDCDC;
  padding-left: 10px;
  width: 80%;
  border-radius: 3px;
  margin: 0 auto;
  margin-top: 20px;
}

.rtview .rtextn{
  font-size: 13px;
  font-weight: bold;
}
.rtview .rtextc{
  font-size: 13px;
}